# vim: filetype=muttrc

color normal color0 default
color error color160 default
color tilde color254 default
color message color37 default
color markers color160 color234
color attachment color245 default
color search color61 default
color status color244 color254
color indicator color230 color136

# arrow in threads
color tree color245 default

# basic monocolor screen
mono bold bold
mono underline underline
mono indicator reverse
mono error bold

# all messages
color index color245 default "~A"

# new messages
color index color32 default "~N"

# new messages to me
color index color20 default "~N~p"

# messages from me
color index color251 default "~P"

# deleted messages
color index color1 default "~D"

color header color245 default "^"
color hdrdefault color245 default
color header color0 default "^(From)"
color header color5 default "^(Subject)"

color quoted color33 default
