folder-hook {{IMAP PROTOCOL}}://{{USER}}@{{IMAP HOST}}/ '\
    set \
    sendmail="msmtp -C $HOME/.config/msmtp/{{SMTP ACCOUNT}}"\
    imap_pass={{PASSWORD}}\
    from="{{FULL NAME}} <{{USER}}>"\
    folder="{{IMAP PROTOCOL}}://{{USER}}@{{IMAP HOST}}"\
    spoolfile="{{IMAP PROTOCOL}}://{{USER}}@{{IMAP HOST}}"\
    record="+{{SENT MAILBOX}}"\
    postponed="+{{DRAFT MAILBOX}}"'

set folder='{{IMAP PROTOCOL}}://{{USER}}@{{IMAP HOST}}'

set spoolfile='{{IMAP PROTOCOL}}://{{USER}}@{{IMAP HOST}}'
