account-hook {{IMAP PROTOCOL}}://{{USER}}@{{IMAP HOST}}/ '\
    set \
    sendmail="msmtp --host={{SMTP HOST}} \
        --user={{USER}} --from={{USER}} \
        --passwordeval='msmtp-password\ {{USER}}' \
        --tls=on \
        --tls-trust-file=/etc/ssl/certs/ca-certificates.crt \
        --auth=on"\
    imap_pass={{PASSWORD}}\
    from="{{FULL NAME}} <{{USER}}>"\
    folder={{IMAP PROTOCOL}}://{{USER}}@{{IMAP HOST}}/\
    record="+{{SENT MAILBOX}}"\
    postponed="+{{DRAFT MAILBOX}}"'

set spoolfile='{{IMAP PROTOCOL}}://{{USER}}@{{IMAP HOST}}'

macro index \C{{HOTKEY}} "<enter-command>set spoolfile='{{IMAP PROTOCOL}}://{{USER}}@{{IMAP HOST}}'<enter>"
