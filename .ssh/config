IdentityFile        ~/.ssh/id_rsa

Host *.d *.t*
    User            root
    IdentityFile    ~/.ssh/id_rsa_env

Host task*
    User            ngs

Host git
    User git

Host github.com gh
    HostName        github.com
    User            git
    ControlPath     none

Host gist.github.com

Host g
    Hostname        git.rn
    User            git
    Port            7999
    ControlPath     none

Host git.rn
    User            git
    ControlPath     none

Host *
    ControlMaster   auto
    ControlPersist  1h
    ControlPath     ~/.ssh/connections/%r_%h_%p
    Compression     yes
    SendEnv         TERM BACKGROUND
