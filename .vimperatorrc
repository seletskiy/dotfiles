set hintchars=weasdiopjkl

hi CompResult -append font-family: Monaco; font-size: 12px;
hi CompDesc -append font-family: Monaco; font-size: 12px;
hi CmdLine>* font-family: Monaco; font-size: 12px;
hi StatusLine -append font-family: Monaco; font-size: 12px;
hi Hint font-size: 12px; font-weight: bold; text-transform: uppercase; color: white; background-color: red; border-color: ButtonShadow; border-width: 0px; border-style: solid; padding: 0px 1px 0px 1px; font-family: Monaco; opacity: 0.75;

set editor="sh -c 'i3-msg workspace 2 ; vim --remote-tab-wait-silent $0 ; i3-msg workspace back_and_forth'"
set gui=none

nnoremap j 5j
nnoremap k 5k

map s :tabopen t<space>

js <<EOJS
var slack_fix_esc = function() {
    var win = window.content.wrappedJSObject;
    win.addEventListener('load', function () {
        win.document.onkeydown = function (e) {
            if (e.keyCode==27) {
                win.$(':focus').blur();
            }
        }
    })
}
EOJS

autocmd!
autocmd LocationChange slack.com js slack_fix_esc()
autocmd LocationChange zabbix.in.ngs.ru setl ht+=| //span[@class='link_menu'] | //div[contains(@class,'app-list-toggle')] | //span[@class='link']
autocmd LocationChange jira.rn setl ht+=| //ul[@id='issuedetails']//*[contains(@class,'value')] | //div[contains(@class,'ghx-details-close')]

