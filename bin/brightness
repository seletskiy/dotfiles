#!/bin/bash

device=/sys/class/backlight/intel_backlight
current=$(cat $device/brightness)
step=${2:-500}

if [ $current -le 10 ]; then
    step=$((step / 10))
fi

if [ $# -eq 0 ]; then
	cat $device/actual_brightness
elif [ $1 == "up" ]; then
	echo echo $(($current+$step)) \> $device/brightness
	echo $(($current+$step)) > $device/brightness
elif [ $1 == "down" ]; then
	echo $(($current-$step)) > $device/brightness
fi
