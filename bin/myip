#!/bin/bash

if ! ip l | grep -v LOOPBACK | grep -q UP; then
    printf "NONE\n"
    exit
fi

output=$(curl -s https://www.speedtest.net/speedtest-config.php | \
    xml2 | \
    grep -F '/settings/client' | \
    grep -Po '@(ip|isp)=\K.*' | \
    paste -sd' ')

if [[ "$output" ]]; then
    printf "%s\n" "$output"
else
    printf "UNKNOWN\n"
fi
