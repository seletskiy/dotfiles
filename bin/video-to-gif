#!/bin/bash

if [[ $# -lt 2 || "$1" == "-h" ]]; then
    echo usage: "$0 <video.avi> <output.gif> [parallel_processes_count]"
    exit 1
fi


temp_dir=$(mktemp -d)

ffmpeg -i $1 -r 10 $temp_dir/out%06d.png

ls -1 $temp_dir/out*.png | xargs -P${3:-2} -II -n1 convert -verbose I I.gif

gifsicle --delay=8 --optimize --loop $temp_dir/*.gif > $2

rm -r $temp_dir
