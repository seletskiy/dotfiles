#!/bin/bash

:map-outputs() {
    local connected=false

    while read line; do
        if [[ "$line" =~ "disconnected " ]]; then
            connected=false
            continue
        elif [[ "$line" =~ "connected " ]]; then
            connected=true
            output="${line%% *}"
        else
            if $connected && [[ "$line" =~ ^[0-9]+x[0-9]+ ]]; then
                read size _ <<< "$line"

                printf "%s %s\n" "$size" "$output"
            fi
        fi
    done
}

output=$(
    xrandr \
        | :map-outputs \
        | sort -nr \
        | head -n1 \
        | awk '{ print $2 }'
)

xrandr --output "$output" --preferred

xrandr \
    | grep -vFw "$output" \
    | grep -Fw "connected" \
    | awk '{ print $1 }' \
    | xargs -n1 -I{} xrandr --output {} --off

systemctl --user restart i3
systemctl --user restart keynav
