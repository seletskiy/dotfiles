#!/bin/bash

zabbix=http://192.168.2.85/zabbix/history.php

temperature_url="$zabbix?itemid\[0\]=200200000051699&action=showvalues&plaintext="
co2_url="$zabbix?itemid\[0\]=200200000049057&action=showvalues&plaintext="
humidity_url="$zabbix?itemid\[0\]=200200000051693&action=showvalues&plaintext="

while :; do
    echo $(
        curl -qs $humidity_url 2>/dev/null | grep "^201" | awk '{print $4"%"}' | head -n1
        curl -qs $co2_url 2>/dev/null | grep "^201" | awk '{print $4"ppm"}' | head -n1
        curl -qs $temperature_url 2>/dev/null | grep "^201" | awk '{print $4}' | head -n1 | cut -b1-4
    )
    sleep 1s;
done

