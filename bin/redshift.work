#!/bin/bash

for i in {0..9}; do
	if xset -q > /dev/null 2>&1; then
		/usr/bin/redshift -l55.0167:82.9333 -mvidmode:screen=0 &
		/usr/bin/redshift -l55.0167:82.9333 -mvidmode:screen=1 &
		/usr/bin/redshift -l55.0167:82.9333 -mvidmode:screen=2 &

        exit 0
	fi

    sleep 1
done

echo "Failed to start redshift: no response from X11 server."
exit 1
